<%= render 'refinery/admin/search_header', :url => refinery.job_inquiries_admin_job_inquiries_path %>
<% if searching? %>
  <% if @job_inquiries.any? %>
    <ul>
      <%= render :partial => 'job_inquiry', :collection => @job_inquiries %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_job_inquiries.any? -%>
    <% @grouped_job_inquiries.each do |container| %>
      <h3><%= l((job_inquiry_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'job_inquiry', :collection => job_inquiry_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_job_inquiries', :scope => 'refinery.job_inquiries.admin.job_inquiries.index') %></strong>
    </p>
  <% end -%>
<% end %>
